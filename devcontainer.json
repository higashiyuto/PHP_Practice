{
  "name": "PHP, MySQL, HTML/CSS Development",
  "features": {},
  "settings": {
    "editor.formatOnSave": true
  },
  "extensions": [
    "felixfbecker.php-debug",  // PHPデバッグ用
    "bmewburn.vscode-intelephense-client",  // PHP補完・Lint用
    "esbenp.prettier-vscode",  // HTML/CSS/JSのフォーマット
    "dbaeumer.vscode-eslint"  // JSのLint用
  ],
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y php-cli php-mysql apache2 mysql-server",
  "forwardPorts": [80, 3306],
  "remoteUser": "vscode"
}