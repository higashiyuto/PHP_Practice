{
  "name": "MySQL Dev Environment",
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
    "ghcr.io/devcontainers/features/mysql:1": {
      "version": "8",
      "password": "your_password"
    }
  },
  "forwardPorts": [3306],
  "postCreateCommand": "apt-get update && apt-get install -y mysql-client && /usr/bin/mysql --version",
  "remoteUser": "vscode"
}
